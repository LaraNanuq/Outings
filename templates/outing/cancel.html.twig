{% extends 'base.html.twig' %}

{% block title %}
    Annulation de sortie | {{ parent() }}
{% endblock %}

{% block body %}
    <h1 class="h3">Annulation de sortie</h1>

    <div>
        <div>Nom : {{ outing.name }}</div>
        <div>Date : {{ outing.date|date('d/m/Y - H:i') }}</div>
        <div>Campus : {{ outing.campus.name }}</div>
        <div>Lieu :</div>
        <div>
            {{ outing.location.name }}<br />
            {{ outing.location.street }}<br />
            {{ outing.location.city.postalCode }}<br />
            {{ outing.location.city.name }}<br />
        </div>
    </div>

    {{ form_start(cancelForm) }}
        {{ form_errors(cancelForm) }}
        {{ form_widget(cancelForm) }}
        <div class="btn-group">
            <button type="submit" class="btn btn-sm btn-danger">Valider</button>
        </div>
    {{ form_end(cancelForm) }}
    
{% endblock %}
